<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header class="bg-colour py-4 border-bottom shadow">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <h2 class="m-0">ADMIN PANEL</h2>
            </div>
            <nav class="nav_bar align-items-center d-flex">
                <ul class="gap-5 m-0 d-flex list-unstyled fw-bolder pe-5">
                    <li><a href="#" class="text-decoration-none text-black">Home</a></li>
                    <li><a href="#" class="text-decoration-none text-black">Contact</a></li>
                    <li><a href="#" class="text-decoration-none text-black">About</a></li>
                </ul>
            </nav>
            <div class="d-flex flex-row gap-3">
                <a href="/logout" class="btn fw-bolder p-1 btn-outline-dark border-2">Log out</a>
                <a href="/profile/<%= admin._id %>" class="btn fw-bolder p-1 btn-outline-dark px-2 border-2 fs-6">
                    <i class="fa-regular fa-user user_profile"></i> <%= admin.username %>
                </a>
            </div>
        </div>
    </header>
    <main class="container  main-container">
        <div class="overflow-hidden overflow-y-scroll h-100 mx-4 my-5 rounded-3">
            <table class="table border-black ">
                <thead>
                    <tr class="table-secondary">
                        <th scope="col">Sl No.</th>
                        <th scope="col">USER</th>
                        <th scope="col">POST</th>
                        <th scope="col">DELETE</th>
                    </tr>
                </thead>
                <tbody>
                <% let slno = 1; %>
                <% users.forEach(user => { %>
                    <tr class="table-success user-table">
                        <td><%= slno++ %></td>
                        <td><a href="/userEdit/<%= user._id %>" class="text-decoration-none fw-medium text-dark "><%= user.username.toUpperCase() %></a></td>
                        <td><a href="/userProfile/<%= user._id %>" class="text-decoration-none fw-medium text-dark ">POSTS</a></td>
                        <td><a href="/userDelete/<%= user._id %>" class="text-decoration-none fw-medium text-dark btn-danger ">DELETE USER</a></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </main>
    <%- include('../footers/footers.ejs') %>
